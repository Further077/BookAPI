<h1>Listing books</h1>

<table>
  <tr>
    <th>ISBN</th>
    <th>Title</th>
    <th>Author</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.ISBN %></td>
    <td><%= book.Title %></td>
    <td><%= book.Author %></td>
    <td><%= book.Price %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :method => :delete, :data => { :confirm => 'Are you sure you want to delete this Book?' } %></td>
  </tr>
<% end %>
</table>

